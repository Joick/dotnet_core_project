<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <!-- log.Info -->
    <appender name="InfoLogAppender" type="log4net.Appender.RollingFileAppender">
      <!-- 设置文件存储的位置 -->
      <file value="log/info/" />
      <!-- 是否追加到文件 -->
      <appendToFile value="true" />
      <!-- 文件创建的方式 -->
      <rollingStyle value="Date" />
      <!--是否使用静态文件名-->
      <staticLogFileName value="false" />
      <!--日志文件名-->
      <datePattern value="yyyyMMdd'.log'" />
      <!-- 最小锁定模式，以允许多个进程可以写入同一个文件 -->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="10MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Info" />
        <param name="LevelMax" value="Info" />
      </filter>
    </appender>

    <!-- log.warn -->
    <appender name="WarnLogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log/warn/" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <staticLogFileName value="false" />
      <datePattern value="yyyyMMdd'.log'" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="10MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Warn" />
        <param name="LevelMax" value="Warn" />
      </filter>
    </appender>

    <!-- log.error -->
    <appender name="ErrorLogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log/error/" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <staticLogFileName value="false" />
      <datePattern value="yyyyMMdd'.log'" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="10MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Error" />
        <param name="LevelMax" value="Error" />
      </filter>
    </appender>

    <!-- log.debug -->
    <appender name="DebugLogAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log/debug/" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <staticLogFileName value="false" />
      <datePattern value="yyyyMMdd'.log'" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="10MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Debug" />
        <param name="LevelMax" value="Debug" />
      </filter>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="InfoLogAppender" />
      <appender-ref ref="WarnLogAppender" />
      <appender-ref ref="ErrorLogAppender" />
      <appender-ref ref="DebugLogAppender" />
    </root>

  </log4net>
</configuration>